<p class="switcher"><label for="vendor_switcher"><?php echo $this->__('Show product For Vendor') ?>:</label>
<select name="vendor_switcher" id="vendor_switcher" onchange="return switchVendor(this);">
    <option value=""><?php echo $this->__('All Vendors') ?></option>
    <?php foreach ($this->getVendorCollection() as $_vendor): ?>
          <option value="<?php echo $_vendor->getVendorId() ?>"<?php if($this->getVendorId() == $_vendor->getId()): ?> selected<?php endif; ?>>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<?php echo $_vendor->getVendorName() ?></option>
    <?php endforeach; ?>
</select>
</p>
<script type="text/javascript">
    function switchVendor(obj){
        var selectionType = 'vendor';
 
        var vendorParam = obj.value ? selectionType + '/' + obj.value + '/' : '';
        if(obj.vendorParams){
            vendorParam = obj.switchParams;
        }
        setLocation('<?php echo $this->getSwitchUrl() ?>'+vendorParam);
    }
</script>
