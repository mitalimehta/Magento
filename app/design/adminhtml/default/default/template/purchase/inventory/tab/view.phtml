<?php
/**
 * Template for block Mage_Adminhtml_Block_Customer_Edit_Tab_View
 */
?>
<?php 

$availableQty = $this->getAvailableQuantity();
$totalQty = $this->getTotalQuantity();

$soQty = round($totalQty-$availableQty);

$averagecost = $this->getProductAverageCost();
$cost = $this->getProductCost();

$sku = $this->getProductSKU();

$po_qty = $this->getPOQuantity();

$stock_needed = $this->getMaxQuantity() - $po_qty - $availableQty;
?>

<div class="entry-edit">
    <div class="entry-edit-head"><h4 class="icon-head head-customer-view"><?php echo Mage::helper('customer')->__('Product Summary') ?></h4></div>
    <fieldset>
        <table cellspacing="10" class="box-left">
            <tr>
                <td width="30%"><strong><?php echo $this->__('SKU:') ?></strong></td>
                <td><?php echo $sku; ?></td>
            </tr>
            <tr>
                <td width="30%"><strong><?php echo $this->__('Cost:') ?></strong></td>
                <td><?php echo "$".$cost; ?></td>
            </tr>
            <tr>
                <td><strong><?php echo $this->__('Average Cost:') ?></strong></td>
                <td><?php echo "$".$averagecost; ?></td>
            </tr>
        </table> 
    </fieldset> 
</div> 

<div class="entry-edit">
    <div class="entry-edit-head"><h4 class="icon-head head-customer-view"><?php echo Mage::helper('customer')->__('Inventory Summary') ?></h4></div>
    <fieldset>
        <table cellspacing="10" class="box-left">
            <tr>
                <td width="30%"><strong><?php echo $this->__('Total Quantity:') ?></strong></td>
                <td><?php echo $totalQty ?></td>
            </tr>
            <tr>
                <td><strong><?php echo $this->__('Available Quantity:') ?></strong></td>
                <td><?php echo $availableQty; ?></td>
            </tr>
            <tr>
                <td><strong><?php echo $this->__('Sales Order Quantity:') ?></strong></td>
                <td><?php echo $soQty ?></td>
            </tr>  
            <tr>
                <td><strong><?php echo $this->__('Stock Needed:') ?></strong></td>
                <td><?php echo $stock_needed; ?></td>
            </tr>
            <tr>
                <td><strong><?php echo $this->__('P.O. Quantity:') ?></strong></td>
                <td><?php echo $po_qty; ?></td>
            </tr>
        </table> 
    </fieldset>
</div> 


